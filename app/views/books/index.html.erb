<h1>Books</h1>


<table>
  <tr>
    <th>
      Title
    </th>
    <th>
      Body
    </th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %></td>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>show</td>
      <td>edit</td>
      <td>destroy</td>
    </tr>
  <% end %>
</table>

<%= form_with model: Book.new do |f| %>
  <h2>New Books</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'CreateBook' %>
<% end %>

